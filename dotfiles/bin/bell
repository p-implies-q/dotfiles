#!/usr/bin/env python

from __future__ import print_function

import sys
import time
import subprocess

CMD = ["aplay", "/home/david/docs/audio/effects/bell.wav", "-q"]
TIME = int(sys.argv[1])
subprocess.Popen(CMD)
for m in range(TIME, 0, -1):
    sys.stdout.write("Bell will sound again in {0} minutes\r".format(m))
    sys.stdout.flush()
    time.sleep(60)
subprocess.Popen(CMD)
